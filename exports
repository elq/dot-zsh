# -*- mode: shell-script -*-
export PS1="%n@%m:%~>"
export PATH=~/bin/:/usr/local/bin:/opt/local/bin/:/usr/local/mysql/bin:/opt/hg/bin:$PATH
export VISUAL="emacsclient -a vim"
export MANPATH=/usr/share/man:/usr/local/share/man:/usr/X11/man:/opt/local/man

#path for jruby
export PATH=$PATH:/Users/eric/src/jruby/bin
export JRUBY_HOME=/Users/eric/src/jruby/

#adb
export PATH=$PATH:~/src/android-sdk-mac/tools

#matlab
export PATH=$PATH:/Applications/MATLAB_2008a/bin

#cuda
export PATH=$PATH:/usr/local/cuda/bin
export DYLD_LIBRARY_PATH=$DYLD_LIBRARY_PATH:/usr/local/cuda/lib


#i can haz grep colerz?
export GREP_OPTIONS='--color=auto'
export GREP_COLOR='1;36'

#osx hack...
export BROWSER=open

if [ -z "$BROWSER" ] ; then
    if [ -n "$DISPLAY" ] ; then
        #v# If X11 is running
        [ -x $(which firefox) ] && export BROWSER=firefox
    else
        #v# If no X11 is running
        [ -x $(which w3m) ] && export BROWSER=w3m
    fi
fi
